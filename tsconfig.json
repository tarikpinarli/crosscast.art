{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "vite/client"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    
    /* --- THIS IS THE FIX --- */
    "baseUrl": ".", 
    "paths": {
      "@/*": ["./*"],
      "react-map-gl": ["./node_modules/react-map-gl/dist/mapbox.d.ts"]
    },
    /* ----------------------- */

    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}